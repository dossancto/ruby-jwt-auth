<div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl p-4 mb-4  hover:bg-gray-200 transition duration-300 ease-in-out ">
  <div class="md:flex">
    <div class="p-8">
      <input id="product_id" type="text" class="hidden" name="product_id" value="<%= product.id %>">
      <input id="product_price" type="text" class="hidden" name="product_id" value="<%= product.price %>">
      <input id="product_category" type="text" class="hidden" name="product_id" value="<%= product.category %>">

      <!-- Product Title -->
      <div  class="text-2xl font-semibold text-gray-800 mb-4"><%= product.name %></div>

      <!-- Product Description -->
      <p class="text-gray-600 mb-4"><%= product.description %></p>

      <!-- Product Price -->
      <div class="text-xl font-medium text-indigo-600 mb-4">$ <%= product.price %></div>

      <!-- Product Category -->
      <div class="text-sm text-gray-500">Category: <%= product.category %></div>
    </div>
  </div>
</div>
