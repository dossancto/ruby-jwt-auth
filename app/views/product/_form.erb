<form class="mt-8" method="<%= method %>">
    <div class="mx-auto max-w-lg ">
        <div class="py-1">
            <span class="px-1 text-sm text-gray-600">Product Name</span>
            <input name="name" type="text" value="<%= defined?(product) ? product.name : ''  %>"
                   class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
        </div>
        <div class="py-1">
            <span class="px-1 text-sm text-gray-600">Description</span>
            <div class="flex flex-col">
              <textarea value="" id="message" name="description" rows="4" class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                <%= defined?(product) ? product.description : ''  %>
              </textarea>
            </div>
        </div>
        <div class="py-1">
            <span class="px-1 text-sm text-gray-600">Price</span>
            <input value="<%= defined?(product) ? product.price : ''  %>"
            name="price" type="number" step="0.01" class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md
            focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
        </div>
        <div class="py-1">
            <span class="px-1 text-sm text-gray-600">Category</span>
            <select name="category" class="block w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              <option value="eletrodomestic">Eletrodomestic</option>
              <option value="home">Home</option>
              <option value="tech">Tech</option>
            </select>
        </div>
        <div class="py-1">
            <span class="px-1 text-sm text-gray-600">Stock Quantity</span>
            <input value="<%= defined?(product) ? product.stock_quantity : ''  %>"
            name="stock_quantity" type="number" class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md
            focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
        </div>
        <button class="mt-3 text-lg font-semibold bg-gray-800 w-full text-white rounded-lg px-6 py-3 block shadow-xl hover:text-white hover:bg-black">
            Submit
        </button>
    </div>
</form>

