<!-- products_list.erb -->
<h1>List of Products</h1>
  <% @products.each do |product| %>
    <a href="/product/<%= product.id %>">
      <%= erb :'product/_card', locals: {product:} %>
    </a>
  <% end %>

  <% if @current_user&.access?(roles: [:admin]) %>
    <a href="/product/new-product">
<button class="rounded-md bg-gray-800 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Add a New Product</button>
    </a>
  <% end %>
