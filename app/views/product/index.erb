<!-- products_list.erb -->
<h1>List of Products</h1>
<ul>
  <% @products.each do |product| %>
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl p-4">
  <div class="md:flex">
    <div class="p-8">
      <!-- Product Title -->
      <div class="text-2xl font-semibold text-gray-800 mb-4"><%= product.name %></div>

      <!-- Product Description -->
      <p class="text-gray-600 mb-4"><%= product.description %></p>

      <!-- Product Price -->
      <div class="text-xl font-medium text-indigo-600 mb-4">$ <%= product.price %></div>

      <!-- Product Category -->
      <div class="text-sm text-gray-500">Category: <%= product.category %></div>
    </div>
  </div>
  </div>
<% end %>
</ul>
