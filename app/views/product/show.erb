<%= erb :'product/_card', locals: {product: @product} %>

<div>
  <input id="product_quantity" type="text" class="hidden" name="product_id" value="<%= @product.category %>">
  <% if @product.avaible %>
    <button id="add_to_cart" class="mt-3 text-lg font-semibold bg-gray-800 w-full text-white rounded-lg px-6 py-3 block shadow-xl hover:text-white hover:bg-black"
    flash-action flash-type="success" flash-message="Card modified">
        Add to cart
    </button>
  <% end %>
</div>

<div>
  <% if @current_user and @current_user.access?(roles: [:admin]) %>
    <a href="/product/edit/<%= @product.id %>">Edit</a>
  <% end %>
</div>
<a href="/product">Go back</a>
